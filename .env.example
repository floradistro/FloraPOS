# Flora POS - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# WordPress/WooCommerce API Configuration
WORDPRESS_URL=https://api.floradistro.com

# WooCommerce API Credentials (REQUIRED)
FLORA_CONSUMER_KEY=your_consumer_key_here
FLORA_CONSUMER_SECRET=your_consumer_secret_here

# WordPress Authentication (optional)
WP_USERNAME=
WP_PASSWORD=

# API Environment Toggle (for development)
# Options: 'production' or 'docker'
NEXT_PUBLIC_API_ENVIRONMENT=production
NEXT_PUBLIC_ENVIRONMENT=local

# API URLs for environment switching
NEXT_PUBLIC_PRODUCTION_API_URL=https://api.floradistro.com
NEXT_PUBLIC_DOCKER_API_URL=http://localhost:8081

# WooCommerce Consumer Keys (public for client-side)
NEXT_PUBLIC_WC_CONSUMER_KEY=your_consumer_key_here
NEXT_PUBLIC_WC_CONSUMER_SECRET=your_consumer_secret_here

# Scandit SDK License Key (REQUIRED)
NEXT_PUBLIC_SCANDIT_LICENSE_KEY=your_scandit_license_key_here
